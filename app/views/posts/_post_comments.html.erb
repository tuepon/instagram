<% unless post.comments.count.zero? %>
  <small class="text-muted">View all <%= pluralize(post.comments.count, "comments") %></small>
<% end %>
<% post.comments.each do |comment| %>
  <p class="card-text m-0"><span class="fw-bold"><%= comment.user.username %></span> <%= comment.body %></p>
<% end %>